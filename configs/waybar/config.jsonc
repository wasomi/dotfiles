// =============================================================================
//
// Waybar configuration
//
// Configuration reference: https://github.com/Alexays/Waybar/wiki/Configuration
//
// =============================================================================

{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "top",

    "position": "top",

    // If height property would be not present, it'd be calculated dynamically
    // "height": 20,

    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "pulseaudio",
        "memory",
        "cpu",
        "temperature",
        "hyprland/language",
        "battery",
        "clock"
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

    "battery": {
        "interval": 5,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-alt": "{icon} {capacity}%",
        "format-charging": "Û∞†† {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "clock": {
        "format": "ÔÄó {:%R}",
        "format-alt": "ÔÅ≥ {:%A, %B %d, %Y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode-mon-col"  : 3,
                    "format": {
                        "months":     "<span color='#ffead3'><b>{}</b></span>",
                        "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                        "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                        "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                        "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                        }
                    },
        "actions":  {
                    "on-click-right": "mode"
                    }
    },

    "cpu": {
        "interval": 5,
        "format": "Ôíº  {usage}%", 
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "hyprland/language": {
        "format-en": "üá∫üá∏",
        "format-ru": "üá∑üá∫",
        "on-click": "hyprctl switchxkblayout all next"
    },

    "memory": {
        "interval": 5,
        "format": "ÓøÖ  {}%",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "network": {
        "format": "{ifname}",
        "format-wifi": "Û∞ñ©",
        "format-ethernet": "Û∞àÄ",
        "format-disconnected": "Û±òñ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname} {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "disconnected",
        "on-click": "kitty nmtui"
    },

    "hyprland/window": {
        "format": "{}",
        "max-length": 50
    },

    "hyprland/workspaces": {
        "all-outputs": false,
        "disable-scroll": true,
        "format": "{name}",
        "persistent-workspaces": {
             "*": 5
       }
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon}Ôäî {volume}%",
        "format-muted": "Óª®",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "phone-muted": "Ó¥ó",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },

    "temperature": {
        "critical-threshold": 80,
        "interval": 5,
        "format": "Óº´  {temperatureC}¬∞C",
        "tooltip": false
    },

    "tray": {
        "icon-size": 16,
        "spacing": 8
    }

}
