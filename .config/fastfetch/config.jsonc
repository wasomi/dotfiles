{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
      	"type": "small"
    },
    "display": {
      	"separator": " > "
    },
    "modules": [
		{
			"type": "title",
			"format": "{6} {7} {8}"
		},
		"break",
		{
			"type": "os",
			"key": "os  ",
			"keyColor": "magenta",
			"format": "{id}"
		},
		{
			"type": "kernel",
			"key": "krn ",
			"keyColor": "cyan",
			"format": "{release}"
		},
		{
			"type": "packages",
			"key": "pkgs",
			"keyColor": "green"
		},
		{
			"type": "command",
			"key": "age ",
			"keyColor": "blue",
			"text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
		},
		{
			"type": "uptime",
			"key": "up  ",
			"keyColor": "red"
		},
		"break"
    ]
  }
